<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextLogo" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:fontFamily">@font/architects_daughter</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CircularProgressBar" parent="Widget.MaterialComponents.CircularProgressIndicator.ExtraSmall">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">?attr/colorOnBackground</item>
    </style>

    <style name="ConnectionFailedBanner" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/error_network_loading</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/very_small_spacing</item>
        <item name="android:paddingBottom">@dimen/very_small_spacing</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ChatItemTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxWidth">@dimen/user_full_name_max_width</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ChatItemCaption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/default_page_text</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="ChatItemButton" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.Material3.FloatingActionButton
        </item>
        <item name="android:padding">@dimen/no_spacing</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">@dimen/chat_item_button_min_height</item>
        <item name="android:insetBottom">@dimen/no_spacing</item>
        <item name="android:insetTop">@dimen/no_spacing</item>
    </style>

    <style name="CircleButtonIcon" parent="Widget.Material3.Button.Icon">
        <item name="android:insetTop">@dimen/no_spacing</item>
        <item name="android:insetBottom">@dimen/no_spacing</item>
        <item name="android:padding">@dimen/no_spacing</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/no_spacing</item>
        <item name="iconSize">@dimen/circle_button_icon_size</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="SimpleButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">@dimen/no_spacing</item>
        <item name="android:minWidth">@dimen/no_spacing</item>
        <item name="android:minHeight">@dimen/no_spacing</item>
        <item name="android:insetRight">@dimen/no_spacing</item>
        <item name="android:insetTop">@dimen/no_spacing</item>
        <item name="android:insetBottom">@dimen/no_spacing</item>
        <item name="android:insetLeft">@dimen/no_spacing</item>
        <item name="iconPadding">@dimen/no_spacing</item>
    </style>

    <style name="SimpleButton.MoreButton">
        <item name="iconSize">@dimen/post_more_icon_size</item>
        <item name="iconTint">?attr/colorOnBackground</item>
        <item name="icon">@drawable/ic_more_horizontal</item>
    </style>

    <style name="SimpleButton.PostOptionButton">
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconSize">@dimen/post_options_icon_size</item>
        <item name="android:textColor">@color/default_page_text</item>
        <item name="iconTint">@color/default_page_text</item>
        <item name="iconPadding">@dimen/small_spacing</item>
    </style>

    <style name="DialogOption" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Menu</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>


</resources>